Login

<%= form_with(url: login_path, method: :post) do |form| %>
  <div>
    <%= form.label :username, "Username" %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password, "Password" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log In" %>
  </div>
<% end %>

<%= link_to "Forgot password?", forgot_password_path %>