<%= csrf_meta_tags %>
<%= csp_meta_tag %>

<%= stylesheet_link_tag 'application', media: 'all' %>
<%= javascript_include_tag 'application' %>

<style>
  body { font-family: Arial, sans-serif; margin: 20px; }
  .container { max-width: 1200px; margin: 0 auto; }
  .alert { padding: 10px; background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; margin-bottom: 15px; }
  .notice { padding: 10px; background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; margin-bottom: 15px; }
  nav { background-color: #f8f9fa; padding: 10px; margin-bottom: 20px; }
  nav a { margin-right: 15px; text-decoration: none; color: #007bff; }
</style>

<nav>
  <%= link_to 'Main', root_path %>
  <%= link_to 'Articles', articles_path %>
  <%= link_to 'Users', users_path %>
  <% if current_user %>
    <%= link_to 'Profile', dashboard_path(user_id: current_user.id) %>
    <%= button_to "Logout", logout_path, method: :delete %>
  <% else %>
    <%= link_to 'Log in', login_path %>
  <% end %>
</nav>

<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="container">
  <%= yield %>
</div>